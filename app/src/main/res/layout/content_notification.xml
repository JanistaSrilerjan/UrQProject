<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jnstar.urqproject.Notification"
    tools:showIn="@layout/activity_notification">



    <Switch
        android:id="@+id/sw_alarm"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:text="เสียงการแจ้งเตือน"
        android:textAppearance="@style/default_text"/>

    <Switch
        android:id="@+id/sw_notification"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:text="การแจ้งเตือน"
        android:textAppearance="@style/default_text"/>

    <TextView
        android:id="@+id/tv_notification_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="15sp"
        android:text="รูปแบบการแจ้งเตือน"
        android:textSize="@dimen/text_size18"
        />


        <Spinner
            android:id="@+id/sp_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="15sp"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            />


        <TextView
            android:id="@+id/tv_detail_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10sp"
            android:text="จำนวนคิวที่ต้องการให้แจ้งก่อนล่วงหน้า"
            android:textSize="@dimen/text_size18" />

        <EditText
            android:id="@+id/ed_add_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:hint="ระบุจำนวนคิว"
            android:inputType="textPersonName|number" />




        <TextView
            android:id="@+id/tv_detail_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10sp"
            android:text="เลือกเวลาที่ต้องการ"
            android:textSize="@dimen/text_size18"/>



        <Spinner
            android:id="@+id/sp_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="15sp"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            />





</LinearLayout>
